<div class="row">
  <h1 class="small-12 columns">Add a new game</h1>
  <div class="small-12 columns">
  <% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= form_for @game do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :year_released %>
      <%= f.text_field :year_released %>
      <%= f.label "Select genre" %>
      <% f.collection_select :genre_id, Genre.all, :id, :name %>
      <%= f.label "Select console" %>
      <% f.collection_select :console_id, Console.all, :id, :name %>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>
