<div class="row">
  <h1 class="small-12 columns">Create account</h1>
  <div class="small-12 columns">

    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <% f.label :password_confirmation %>
      <% f.password_field :password_confirmation %>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>
